<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

   <item android:state_pressed="false">
      <shape>
         <solid android:color="@color/colorAccent" />
         <corners android:radius="2000dp" />
         <stroke android:color="@color/accent_stroke" />
         <padding android:bottom="@dimen/small_button_padding_vertical" android:left="@dimen/small_button_padding_horizontal" android:right="@dimen/small_button_padding_horizontal" android:top="@dimen/small_button_padding_vertical" />
      </shape>
   </item>

   <item android:state_pressed="true">
      <shape>
         <solid android:color="@color/colorAccentDark" />
         <corners android:radius="2000dp" />
         <stroke android:color="@color/accent_stroke" />
         <padding android:bottom="@dimen/small_button_padding_vertical" android:left="@dimen/small_button_padding_horizontal" android:right="@dimen/small_button_padding_horizontal" android:top="@dimen/small_button_padding_vertical" />
      </shape>
   </item>

   <item android:enabled="false">
      <shape>
         <solid android:color="@color/accent_disabled" />
         <corners android:radius="2000dp" />
         <stroke android:color="@color/accent_stroke" />
         <padding android:bottom="@dimen/small_button_padding_vertical" android:left="@dimen/small_button_padding_horizontal" android:right="@dimen/small_button_padding_horizontal" android:top="@dimen/small_button_padding_vertical" />
      </shape>
   </item>

</selector>