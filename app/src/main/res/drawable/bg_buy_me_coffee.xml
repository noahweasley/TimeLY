<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

   <item android:state_pressed="false">
      <shape>
         <solid android:color="@color/colorPrimary_2" />
         <corners android:radius="10dp" />
         <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
      </shape>

   </item>

   <item android:state_pressed="true">
      <shape>
         <solid android:color="@color/colorPrimary" />
         <corners android:radius="10dp" />
         <padding android:left="10dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
      </shape>

   </item>
</selector>