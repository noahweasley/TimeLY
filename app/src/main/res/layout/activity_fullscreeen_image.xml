<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:external="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/black">

   <ImageView
      android:id="@+id/fullscreen_image"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:contentDescription="@string/fullscreen_image"
      android:scaleType="centerInside"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toTopOf="parent" />

   <Button
      android:id="@+id/cancel"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@android:string/cancel"
      android:textColor="@color/white"
      android:textSize="@dimen/button_text_size"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toStartOf="@+id/rotate"
      external:layout_constraintStart_toStartOf="parent" />

   <ImageButton
      android:id="@+id/rotate"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      external:layout_constraintBottom_toBottomOf="@+id/fullscreen_image"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:srcCompat="@drawable/ic_baseline_rotate_90_degrees_ccw_24" />

   <Button
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/done"
      android:textColor="@color/white"
      android:contentDescription="@string/crop_done_description"
      android:textSize="@dimen/button_text_size"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toEndOf="@+id/rotate" />

</androidx.constraintlayout.widget.ConstraintLayout>