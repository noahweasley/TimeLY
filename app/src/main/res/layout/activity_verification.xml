<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:external="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent">

   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout"
      android:layout_width="0dp"
      android:layout_height="@dimen/action_bar_size"
      android:paddingStart="16dp"
      android:paddingLeft="16dp"
      android:paddingEnd="16dp"
      android:paddingRight="16dp"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toTopOf="parent"
      tools:ignore="RtlSymmetry">

   </androidx.constraintlayout.widget.ConstraintLayout>

   <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/verification"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/auth_title_text_size"
      android:textStyle="bold"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

   <TextView
      android:id="@+id/sms"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="@string/code_entry_message"
      android:textColor="@color/light_grey"
      external:layout_constraintEnd_toEndOf="@id/right_guide"
      external:layout_constraintHorizontal_chainStyle="packed"
      external:layout_constraintStart_toStartOf="@+id/left_guide"
      external:layout_constraintTop_toBottomOf="@+id/title" />

   <TextView
      android:id="@+id/edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginVertical="@dimen/layout_gap_2"
      android:drawablePadding="@dimen/layout_gap"
      android:textSize="@dimen/min_text_size"
      android:text="@string/edit_email"
      android:textColor="@color/colorPrimary"
      android:textStyle="bold"

      external:layout_constraintBottom_toTopOf="@+id/verification_pin"
      external:layout_constraintStart_toStartOf="@+id/sms"
      external:layout_constraintTop_toBottomOf="@+id/sms" />

   <com.chaos.view.PinView
      android:id="@+id/verification_pin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/layout_gap_2"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:inputType="number"
      android:textColor="@android:color/black"
      android:textSize="@dimen/editext_text_size"
      external:cursorWidth="2dp"
      external:hideLineWhenFilled="true"
      external:itemCount="4"
      external:itemHeight="56dp"
      external:itemRadius="4dp"
      external:itemSpacing="16dp"
      external:itemWidth="58dp"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toBottomOf="@+id/edit"
      external:lineColor="@color/colorPrimary"
      external:lineWidth="1dp"
      external:viewType="rectangle">

      <requestFocus />

   </com.chaos.view.PinView>

   <TextView
      android:id="@+id/label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/didn_t_receive_code"
      android:textColor="@color/light_grey"
      external:layout_constraintVertical_chainStyle="packed"
      external:layout_constraintBottom_toTopOf="@+id/resend"
      external:layout_constraintStart_toStartOf="@+id/timer"
      external:layout_constraintTop_toBottomOf="@+id/verification_pin" />

   <com.astrro.timely.custom.CountdownTimer
      android:id="@+id/timer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:drawableLeft="@drawable/ic_access_time"
      android:drawablePadding="@dimen/layout_gap"
      android:fontFamily="monospace"
      android:gravity="center"
      android:text="@string/time_min_default"
      android:textColor="@color/black"
      android:textSize="@dimen/min_text_size"
      android:textStyle="bold"
      external:display_type="minutes"
      external:layout_constraintBaseline_toBaselineOf="@id/resend"
      external:layout_constraintStart_toStartOf="@+id/edit"
      external:start_count="240000" />

   <Button
      android:id="@+id/resend"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/layout_gap"
      android:enabled="false"
      android:text="@string/resend"
      android:textSize="@dimen/min_text_size"
      android:layout_marginTop="@dimen/layout_gap"
      external:layout_constraintBottom_toTopOf="@+id/sign_up"
      external:layout_constraintStart_toEndOf="@+id/timer"
      external:layout_constraintTop_toBottomOf="@+id/label"
      external:layout_constraintVertical_bias="0.25" />

   <Button
      android:id="@+id/sign_up"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="8dp"
      android:background="@drawable/cta_button"
      android:text="@string/verify"
      android:textColor="@android:color/white"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toStartOf="@+id/right_guide"
      external:layout_constraintStart_toStartOf="@+id/left_guide"
      external:layout_constraintTop_toBottomOf="@id/verification_pin"
      external:layout_constraintVertical_bias="0.3" />

   <androidx.constraintlayout.widget.Guideline
      android:id="@+id/left_guide"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      external:layout_constraintGuide_percent="0.1"
      tools:viewBindingIgnore="true" />

   <androidx.constraintlayout.widget.Guideline
      android:id="@+id/right_guide"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      external:layout_constraintGuide_percent=".9"
      tools:viewBindingIgnore="true" />

</androidx.constraintlayout.widget.ConstraintLayout>