<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:external="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="@dimen/notification_row_height">

   <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/sender_image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_margin="@dimen/layout_gap"
      external:contentPadding="8dp"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toTopOf="parent"
      external:shapeAppearanceOverlay="@style/Circular_Image"
      external:srcCompat="@drawable/ic_profile_male" />

   <TextView
      android:id="@+id/sender_username"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/layout_gap"
      android:ellipsize="middle"
      android:singleLine="true"
      android:text="Noah Weasley"
      android:textSize="18sp"
      android:textStyle="bold"
      external:layout_constraintBottom_toTopOf="@id/main_message"
      external:layout_constraintEnd_toStartOf="@id/send_time"
      external:layout_constraintStart_toEndOf="@+id/sender_image"
      external:layout_constraintTop_toTopOf="parent" />

   <TextView
      android:id="@+id/main_message"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:ellipsize="end"
      android:layout_marginTop="8dp"
      android:gravity="top|start"
      android:maxLines="2"
      android:text="@string/long_text"
      android:textSize="@dimen/min_text_size"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toEndOf="@+id/sender_username"
      external:layout_constraintStart_toStartOf="@+id/sender_username"
      external:layout_constraintTop_toBottomOf="@+id/sender_username" />

   <TextView
      android:id="@+id/send_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/layout_gap"
      android:layout_marginRight="@dimen/layout_gap"
      android:text="23min"
      android:textColor="@color/colorPrimary"
      android:textSize="14sp"
      android:textStyle="bold"
      external:layout_constraintBottom_toTopOf="@+id/main_message"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintTop_toTopOf="parent" />

   <TextView
      android:id="@+id/message_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/badge"
      android:gravity="center"
      android:padding="4dp"
      android:text="2"
      android:textSize="12sp"
      android:textColor="@color/white"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintDimensionRatio="1"
      external:layout_constraintEnd_toEndOf="@+id/send_time"
      external:layout_constraintHeight_min="40dp"
      external:layout_constraintStart_toStartOf="@+id/send_time"
      external:layout_constraintTop_toBottomOf="@+id/send_time"
      external:layout_constraintWidth_min="40dp" />

   <View
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="?attr/selectableItemBackground"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>