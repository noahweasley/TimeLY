<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:external="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent">

   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout"
      android:layout_width="0dp"
      android:layout_height="@dimen/action_bar_size"
      android:paddingStart="16dp"
      android:paddingLeft="16dp"
      android:paddingEnd="16dp"
      android:paddingRight="16dp"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toTopOf="parent"
      tools:ignore="RtlSymmetry"
      tools:viewBindingIgnore="true">

      <ImageButton
         android:id="@+id/exit"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/round_button"
         android:contentDescription="@string/back"
         android:src="@drawable/ic_baseline_chevron_left_24"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toTopOf="parent" />

   </androidx.constraintlayout.widget.ConstraintLayout>

   <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/layout_gap"
      android:layout_marginVertical="@dimen/layout_gap"
      android:text="@string/create_account"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/auth_title_text_size"
      android:textStyle="bold"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

   <TextView
      android:id="@+id/subtitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/create"
      android:textColor="@color/light_grey"
      android:textSize="@dimen/min_text_size"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toBottomOf="@+id/title" />

   <ScrollView
      android:id="@+id/scrollView2"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/layout_gap"
      external:layout_constraintBottom_toTopOf="@id/bottom_guide"
      external:layout_constraintEnd_toStartOf="@+id/right_guide"
      external:layout_constraintStart_toEndOf="@+id/left_guide"
      external:layout_constraintTop_toBottomOf="@+id/subtitle"
      tools:viewBindingIgnore="true">

      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/first_name_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            external:errorEnabled="true"
            external:layout_constraintEnd_toEndOf="parent"
            external:layout_constraintStart_toStartOf="parent"
            external:layout_constraintTop_toTopOf="parent"
            tools:viewBindingIgnore="true">

            <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/first_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableStart="@drawable/ic_baseline_person_24"
               android:drawableLeft="@drawable/ic_baseline_person_24"
               android:drawablePadding="8dp"
               android:hint="@string/first_name"
               android:inputType="textPersonName"
               android:textColorHint="@color/light_grey"
               android:textSize="@dimen/editext_text_size"
               tools:ignore="Autofill,LabelFor" />

         </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/last_name_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            external:errorEnabled="true"
            external:layout_constraintEnd_toEndOf="parent"
            external:layout_constraintStart_toStartOf="parent"
            external:layout_constraintTop_toBottomOf="@+id/first_name_parent"
            tools:viewBindingIgnore="true">

            <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/last_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:drawableStart="@drawable/ic_baseline_person_24"
               android:drawableLeft="@drawable/ic_baseline_person_24"
               android:drawablePadding="8dp"
               android:hint="@string/last_name"
               android:inputType="textPersonName"
               android:textColorHint="@color/light_grey"
               android:textSize="@dimen/editext_text_size"
               tools:ignore="Autofill,LabelFor" />

         </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_name_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            external:errorEnabled="true"
            external:layout_constraintEnd_toEndOf="parent"
            external:layout_constraintStart_toStartOf="parent"
            external:layout_constraintTop_toBottomOf="@+id/last_name_parent"
            tools:viewBindingIgnore="true">

            <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/user_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableStart="@drawable/ic_baseline_alternate_email_24"
               android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
               android:drawablePadding="8dp"
               android:hint="@string/user_name"
               android:inputType="textVisiblePassword|textNoSuggestions"
               android:textColorHint="@color/light_grey"
               android:textSize="@dimen/editext_text_size"
               tools:ignore="Autofill,LabelFor" />

         </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone_number_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            external:errorEnabled="true"
            external:layout_constraintEnd_toEndOf="parent"
            external:layout_constraintStart_toStartOf="parent"
            external:layout_constraintTop_toBottomOf="@+id/user_name_parent"
            tools:viewBindingIgnore="true">

            <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/phone_number"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableStart="@drawable/ic_baseline_phone_24"
               android:drawableLeft="@drawable/ic_baseline_phone_24"
               android:drawablePadding="8dp"
               android:hint="@string/phone_number"
               android:inputType="phone"
               android:textColorHint="@color/light_grey"
               android:textSize="@dimen/editext_text_size"
               tools:ignore="Autofill,LabelFor" />

         </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            external:errorEnabled="true"
            external:layout_constraintEnd_toEndOf="parent"
            external:layout_constraintStart_toStartOf="parent"
            external:layout_constraintTop_toBottomOf="@+id/phone_number_parent"
            tools:viewBindingIgnore="true">

            <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/email"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableStart="@drawable/ic_outline_email_24"
               android:drawableLeft="@drawable/ic_outline_email_24"
               android:drawablePadding="8dp"
               android:hint="@string/email"
               android:inputType="textEmailAddress"
               android:textColorHint="@color/light_grey"
               android:textSize="@dimen/editext_text_size"
               tools:ignore="Autofill,LabelFor" />

         </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            external:errorEnabled="true"
            external:layout_constraintEnd_toEndOf="parent"
            external:layout_constraintStart_toStartOf="parent"
            external:layout_constraintTop_toBottomOf="@+id/email_parent"
            external:passwordToggleEnabled="true"
            external:passwordToggleTint="?colorControlNormal"
            tools:viewBindingIgnore="true">

            <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/password"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableStart="@drawable/ic_baseline_lock_24"
               android:drawableLeft="@drawable/ic_baseline_lock_24"
               android:drawablePadding="8dp"
               android:hint="@string/password"
               android:inputType="textPassword"
               android:textColorHint="@color/light_grey"
               android:textSize="@dimen/editext_text_size"
               tools:ignore="Autofill,LabelFor" />

         </com.google.android.material.textfield.TextInputLayout>

      </androidx.constraintlayout.widget.ConstraintLayout>

   </ScrollView>

   <com.google.android.material.checkbox.MaterialCheckBox
      android:id="@+id/cbx_lc_agree"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="8dp"
      android:layout_marginTop="@dimen/layout_gap"
      android:checked="true"
      android:gravity="start"
      android:paddingStart="@dimen/layout_gap"
      android:paddingLeft="@dimen/layout_gap"
      android:text="@string/license_agreement"
      android:textColor="@color/black"
      android:textColorHighlight="@color/colorPrimary_5"
      android:textColorLink="@color/colorPrimary"
      external:layout_constraintEnd_toStartOf="@+id/right_guide"
      external:layout_constraintStart_toStartOf="@id/left_guide"
      external:layout_constraintTop_toTopOf="@+id/bottom_guide"
      tools:ignore="RtlSymmetry" />

   <Button
      android:id="@+id/sign_up"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="16dp"
      android:background="@drawable/cta_button"
      android:enabled="true"
      android:text="@string/complete"
      android:textColor="@android:color/white"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toStartOf="@+id/right_guide"
      external:layout_constraintStart_toStartOf="@+id/left_guide"
      external:layout_constraintTop_toTopOf="@+id/bottom_guide"
      external:layout_constraintVertical_bias="0.35000002" />

   <View
      android:id="@+id/dividerLeft"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_marginHorizontal="16dp"
      android:background="?android:attr/listDivider"
      external:layout_constraintBottom_toBottomOf="@id/gs_header"
      external:layout_constraintEnd_toStartOf="@+id/gs_header"
      external:layout_constraintStart_toStartOf="@id/left_guide"
      external:layout_constraintTop_toTopOf="@id/gs_header" />

   <View
      android:id="@+id/dividerRight"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_marginHorizontal="16dp"
      android:background="?android:attr/listDivider"
      external:layout_constraintBottom_toBottomOf="@id/gs_header"
      external:layout_constraintEnd_toStartOf="@+id/right_guide"
      external:layout_constraintStart_toEndOf="@id/gs_header"
      external:layout_constraintTop_toTopOf="@id/gs_header" />

   <TextView
      android:id="@+id/gs_header"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/layout_gap"
      android:fontFamily="monospace"
      android:text="@string/signup_alt_text"
      external:layout_constraintEnd_toStartOf="@+id/right_guide"
      external:layout_constraintStart_toStartOf="@+id/left_guide"
      external:layout_constraintTop_toBottomOf="@+id/sign_up" />

   <androidx.cardview.widget.CardView
      android:id="@+id/g_sign_parent"
      android:layout_width="@dimen/g_sign_parent_size"
      android:layout_height="@dimen/g_sign_parent_size"
      android:layout_centerHorizontal="true"
      android:innerRadius="0dp"
      android:shape="ring"
      android:thicknessRatio="1.9"
      external:cardCornerRadius="40dp"
      external:contentPadding="8dp"
      external:layout_constraintBottom_toTopOf="@id/sign_now"
      external:layout_constraintEnd_toEndOf="@id/right_guide"
      external:layout_constraintStart_toStartOf="@+id/left_guide"
      external:layout_constraintTop_toBottomOf="@+id/gs_header">

      <ImageView
         android:id="@+id/g_sign"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:contentDescription="@string/google_sign_in"
         android:src="@drawable/ic_icons8_google" />

   </androidx.cardview.widget.CardView>

   <TextView
      android:id="@+id/sign_now"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/layout_gap"
      android:text="@string/sign_now"
      android:textColorHighlight="@color/colorPrimary_5"
      android:textColorLink="@color/colorPrimary"
      android:textSize="@dimen/min_text_size"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toStartOf="@+id/right_guide"
      external:layout_constraintStart_toStartOf="@+id/left_guide" />

   <androidx.constraintlayout.widget.Guideline
      android:id="@+id/left_guide"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      external:layout_constraintGuide_percent=".1"
      tools:viewBindingIgnore="true" />

   <androidx.constraintlayout.widget.Guideline
      android:id="@+id/right_guide"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      external:layout_constraintGuide_percent=".9"
      tools:viewBindingIgnore="true" />

   <androidx.constraintlayout.widget.Guideline
      android:id="@+id/bottom_guide"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      external:layout_constraintGuide_percent=".6" />

   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/init_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@color/blurred_background"
      android:visibility="gone"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toTopOf="parent"
      tools:visibility="gone">

      <com.astrro.timely.custom.MaterialProgressbar
         android:id="@+id/indeterminateProgress"
         style="@style/Widget.MaterialProgressBar.ProgressBar"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:indeterminate="true"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toTopOf="parent"
         external:layout_constraintVertical_bias="0.45"
         external:mpb_progressStyle="circular" />

      <TextView
         android:id="@+id/loader_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/layout_gap"
         android:text="@string/log_in_message"
         android:textColor="@android:color/black"
         android:textSize="@dimen/loader_text_size"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toBottomOf="@+id/indeterminateProgress" />

   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>