<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:external="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent">

   <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/materials"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:clipToPadding="false"
      android:paddingHorizontal="@dimen/layout_gap"
      android:paddingTop="@dimen/layout_gap"
      external:layout_behavior="@string/appbar_scrolling_view_behavior"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toTopOf="parent" />

   <com.astrro.timely.custom.MaterialProgressbar
      android:id="@+id/indeterminateProgress"
      style="@style/Widget.MaterialProgressBar.ProgressBar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:indeterminate="true"
      android:visibility="gone"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toTopOf="parent"
      external:mpb_progressStyle="circular"
      tools:visibility="gone" />

   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/connection_failure"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:visibility="gone"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintHorizontal_bias="0.0"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toTopOf="parent"
      external:layout_constraintVertical_bias="0.0"
      tools:visibility="visible">

      <TextView
         android:id="@+id/header"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/layout_gap"
         android:fontFamily="sans-serif-medium"
         android:text="@string/connection_error"
         android:textColor="@color/colorPrimaryDark"
         android:textSize="@dimen/no_task_text_size"
         external:layout_constraintBottom_toTopOf="@id/retry"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toBottomOf="@+id/img_no_event"
         external:layout_constraintVertical_bias="0.07999998"
         external:layout_constraintVertical_chainStyle="packed" />

      <ImageView
         android:id="@+id/img_no_event"
         android:layout_width="120dp"
         android:layout_height="120dp"
         android:layout_margin="@dimen/layout_gap"
         android:contentDescription="@string/no_task"
         android:paddingHorizontal="16dp"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toTopOf="parent"
         external:layout_constraintVertical_bias="0.3"
         external:srcCompat="@mipmap/no_wifi" />

      <Button
         android:id="@+id/retry"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/layout_gap"
         android:background="@drawable/bg_rounded_stroked_1dp"
         android:minHeight="@dimen/button_min_height"
         android:text="Retry"
         android:textColor="@android:color/black"
         android:textSize="@dimen/button_text_size"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toBottomOf="@+id/header"
         external:layout_constraintVertical_bias="0.120000005" />

   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>