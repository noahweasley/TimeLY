<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:external="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent">

   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/calculate_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:visibility="gone"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toTopOf="parent"
      tools:visibility="visible">

      <androidx.recyclerview.widget.RecyclerView
         android:id="@+id/result_list"
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:clipToPadding="false"
         android:layoutAnimation="@anim/list_layout_anim_gravity_top"
         android:paddingHorizontal="@dimen/data_list_padding"
         android:paddingTop="@dimen/data_list_padding"
         android:paddingBottom="200dp"
         external:layout_behavior="@string/appbar_scrolling_view_behavior"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toTopOf="parent"
         tools:visibility="visible" />

      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:paddingTop="@dimen/layout_gap"
         android:background="@color/window_background_color"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintStart_toStartOf="parent">

         <Button
            android:id="@+id/calculate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/cta_button"
            android:text="@string/calculate"
            android:layout_marginBottom="@dimen/layout_gap"
            android:textColor="@android:color/white"
            external:layout_constraintBottom_toTopOf="@id/divider5"
            external:layout_constraintEnd_toEndOf="parent"
            external:layout_constraintStart_toStartOf="parent" />

         <View
            android:id="@+id/divider5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/layout_gap"
            android:background="?android:attr/listDivider"
            external:layout_constraintBottom_toTopOf="@id/total_units_label"
            external:layout_constraintEnd_toEndOf="parent"
            external:layout_constraintStart_toStartOf="parent" />

         <TextView
            android:id="@+id/total_units_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_gap_2"
            android:text="@string/units_total"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/calc_label_text_size"
            external:layout_constraintBottom_toTopOf="@id/total_units"
            external:layout_constraintStart_toStartOf="parent" />

         <TextView
            android:id="@+id/total_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_gap_2"
            android:text="@string/default_credit_units"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/calc_label_text_size_2"
            external:layout_constraintBottom_toBottomOf="parent"
            external:layout_constraintStart_toStartOf="parent"
            external:layout_constraintTop_toTopOf="@id/gpa_units" />

         <TextView
            android:id="@+id/gpa_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_gap_2"
            android:text="@string/gpa_label"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/calc_label_text_size"
            external:layout_constraintBottom_toTopOf="@id/total_units"
            external:layout_constraintEnd_toEndOf="parent" />

         <TextView
            android:id="@+id/gpa_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_gap_2"
            android:text="@string/default_gpa"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/gpa_unit_text_size"
            external:layout_constraintBottom_toBottomOf="parent"
            external:layout_constraintEnd_toEndOf="parent"
            external:layout_constraintTop_toBottomOf="@+id/gpa_label" />

      </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/loader_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      external:layoutDescription="@xml/fragment_result_calculator_scene"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toTopOf="parent"
      tools:visibility="gone">

      <com.astrro.timely.widgets.MaterialProgressbar
         android:id="@+id/indeterminateProgress"
         style="@style/Widget.MaterialProgressBar.ProgressBar"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:indeterminate="true"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toTopOf="parent"
         external:layout_constraintVertical_bias="0.45"
         external:mpb_progressStyle="circular" />

      <TextView
         android:id="@+id/loader_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/layout_gap"
         android:text="@string/prepare_load_text"
         android:textColor="@android:color/black"
         android:textSize="@dimen/loader_text_size"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toBottomOf="@+id/indeterminateProgress" />

   </androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/no_courses_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:visibility="gone"
      external:layoutDescription="@xml/fragment_result_calculator_scene"
      external:layout_constraintBottom_toBottomOf="parent"
      external:layout_constraintEnd_toEndOf="@id/right_guide"
      external:layout_constraintStart_toStartOf="@id/left_guide"
      external:layout_constraintTop_toTopOf="parent"
      tools:visibility="gone">

      <ImageView
         android:id="@+id/img_no_event"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_margin="@dimen/layout_gap"
         android:contentDescription="@string/no_task"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintHorizontal_bias="0.398"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toTopOf="parent"
         external:layout_constraintVertical_bias="0.215"
         external:srcCompat="@mipmap/result" />

      <TextView
         android:id="@+id/textView11"
         style="@style/Info_Text"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="@string/registered_courses_not_found"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintHorizontal_bias="0.0"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toBottomOf="@+id/img_no_event"
         external:layout_constraintVertical_bias="0.14" />

      <TextView
         android:id="@+id/textView10"
         style="@style/Info_Text.Small"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="@string/gpa_calculator_info_text"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toBottomOf="@+id/textView11"
         external:layout_constraintVertical_bias="0.089999974" />

   </androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.Guideline
      android:id="@+id/left_guide"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      external:layout_constraintGuide_percent=".1"
      tools:viewBindingIgnore="true" />

   <androidx.constraintlayout.widget.Guideline
      android:id="@+id/right_guide"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      external:layout_constraintGuide_percent=".9"
      tools:viewBindingIgnore="true" />

</androidx.constraintlayout.widget.ConstraintLayout>