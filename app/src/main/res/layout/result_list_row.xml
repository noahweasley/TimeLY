<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:external="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_marginBottom="@dimen/layout_gap"
   android:background="@drawable/bg_rounded_corners_accent"
   tools:layout_margin="8dp">

   <HorizontalScrollView
      android:id="@+id/horizontalScrollView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:paddingEnd="8dp"
      android:paddingRight="8dp"
      android:scrollbars="none"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toTopOf="parent"
      tools:ignore="RtlSymmetry">

      <TextView
         android:id="@+id/course_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/space"
         android:gravity="center"
         android:maxLines="1"
         android:text="@string/default_course_name"
         android:textSize="@dimen/credits_text_size" />

   </HorizontalScrollView>

   <View
      android:id="@+id/divider3"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_marginVertical="8dp"
      android:background="@color/colorAccent"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

   <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      external:layout_constraintEnd_toEndOf="parent"
      external:layout_constraintStart_toStartOf="parent"
      external:layout_constraintTop_toBottomOf="@id/divider3">

      <Spinner
         android:id="@+id/grades"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:padding="@dimen/layout_gap"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintEnd_toStartOf="@+id/divider4"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toTopOf="parent" />

      <View
         android:id="@+id/divider4"
         android:layout_width="1dp"
         android:layout_height="0dp"
         android:background="@color/colorAccent"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintStart_toStartOf="parent"
         external:layout_constraintTop_toTopOf="parent" />

      <TextView
         android:id="@+id/credits"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="@string/default_credit"
         android:textSize="@dimen/assignment_course_code_text_size"
         android:padding="@dimen/layout_gap"
         external:layout_constraintBottom_toBottomOf="parent"
         external:layout_constraintEnd_toEndOf="parent"
         external:layout_constraintStart_toEndOf="@+id/divider4"
         external:layout_constraintTop_toTopOf="@+id/divider4" />

   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
